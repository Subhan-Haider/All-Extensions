{
    "name": "CodeLens: Extension Source Explorer",
    "short_name": "CodeLens",
    "description": "Unlock the secrets of any browser extension. View source code for professional analysis with a single click.",
    "version": "2.1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "service_worker.js"
    },
    "action": {
        "default_icon": {
            "19": "icons/icon-19.png",
            "38": "icons/icon-38.png"
        },
        "default_title": "CodeLens - Inspect this extension",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "options_page": "options.html",
    "options_ui": {
        "page": "options.html#optionsV2"
    },
    "permissions": [
        "tabs",
        "storage",
        "contextMenus",
        "declarativeContent"
    ],
    "host_permissions": [
        "*://clients2.google.com/service/update2/crx*",
        "*://clients2.googleusercontent.com/crx/download/*",
        "*://microsoftedge.microsoft.com/*",
        "*://edge.microsoft.com/*",
        "*://*.dl.delivery.mp.microsoft.com/*",
        "*://*.delivery.mp.microsoft.com/*",
        "*://*.delivery.mp.microsoft.com.edgesuite.net/*",
        "https://addons.mozilla.org/*",
        "https://api.github.com/*",
        "https://github.com/*"
    ],
    "optional_host_permissions": [
        "*://*/*"
    ],
    "incognito": "split"
}