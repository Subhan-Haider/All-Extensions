{
    "manifest_version": 3,
    "name": "StealthStudy",
    "version": "1.0.0",
    "description": "A stealthy utility tool for students to manage their browsing environment privately.",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "commands": {
        "panic-button": {
            "suggested_key": {
                "default": "Ctrl+Shift+F"
            },
            "description": "Activate Panic Button"
        },
        "toggle-ghost": {
            "suggested_key": {
                "default": "Ctrl+Shift+G"
            },
            "description": "Toggle Ghost Overlay"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}